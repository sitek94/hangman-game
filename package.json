{
  "name": "hangman-game",
  "author": "Maciek Sitkowski",
  "version": "0.1.0",
  "homepage": "https://sitek94.github.io/hangman-game",
  "private": true,
  "scripts": {
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build",
    "build": "react-scripts build && rm build/mockServiceWorker.js",
    "build:local": "PUBLIC_URL=/ yarn build",
    "start": "react-scripts start",
    "start:msw": "REACT_APP_ENABLE_MSW=true react-scripts start",
    "test": "react-scripts test",
    "test:coverage": "yarn test --coverage --watchAll",
    "eject": "react-scripts eject",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "lodash.range": "^3.2.0",
    "node-sass": "4.14.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/react-hooks": "^5.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/lodash.range": "^3.2.6",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "cypress": "^8.4.0",
    "eslint-plugin-cypress": "^2.12.1",
    "gh-pages": "^3.1.0",
    "msw": "^0.35.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/mocks/dev-worker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": "./public"
  }
}
